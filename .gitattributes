# Auto detect text files and perform LF normalization
* text=auto
# Force batch files to use CRLF line endings
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf
*.ps1 text eol=crlf
# Force these files to be treated as binary
*.{png,jpg,jpeg,gif,ico,pdf,zip,7z,rar,exe,dll,so,class} binary
# Handle line endings for specific file types
*.{js,ts,json,md,html,css,scss,yml,yaml,graphql} text eol=lf
# Prevent large files from being committed directly
*.{zip,7z,rar,tar,gz,bz2,xz,iso,dmg} filter=lfs diff=lfs merge=lfs -text
*.{mp4,mov,avi,flv,wmv,mp3,wav,ogg} filter=lfs diff=lfs merge=lfs -text
*.{psd,ai,eps,ps,indd} filter=lfs diff=lfs merge=lfs -text
# Set the default behavior for files in the root directory
/*.json text eol=lf
/*.md text eol=lf
/*.js text eol=lf
/*.ts text eol=lf
# Explicitly handle common binary files
*.{pdf,doc,docx,ppt,pptx,xls,xlsx,odt,ods,odp} binary
*.tar filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.flv filter=lfs diff=lfs merge=lfs -text
*.eps filter=lfs diff=lfs merge=lfs -text
