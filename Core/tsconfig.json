{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@fabrikage/core-protocols": ["./Fabrikage.CoreProtocols/src"],
      "@fabrikage/auto-execution": ["./Fabrikage.AutoExecution/src"],
      "@fabrikage/intelligence-matrix": ["./Fabrikage.IntelligenceMatrix/src"],
      "@fabrikage/provenance-ledger": ["./Fabrikage.ProvenanceLedger/src"],
      "@fabrikage/observability-atlas": ["./Fabrikage.ObservabilityAtlas/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"]
}
